<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearlayout_spcific_top"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_weight="0.02"
        android:background="@drawable/re_specific"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView_back"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            android:adjustViewBounds="true"
            android:maxHeight="30dp"
            android:paddingLeft="10dp"
            android:scaleType="fitStart"
            android:src="@drawable/ic_up_indicator" />

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView_all"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.77"
            android:gravity="right"
            android:paddingRight="20dp"
            android:text="全集" />
    </LinearLayout>

    <ListView
        android:id="@+id/listview_recommend_specific"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.11"
        android:cacheColorHint="#00000000"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:listSelector="#00000000" >
    </ListView>

    <LinearLayout
        android:id="@+id/linearlayout_spcific_top"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_weight="0.02"
        android:background="@drawable/re_specific"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView_goodhand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/start1" />

        <ImageView
            android:id="@+id/imageView_comm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/pinglun" />

        <ImageView
            android:id="@+id/imageView_shared"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/share" />
    </LinearLayout>

</LinearLayout>